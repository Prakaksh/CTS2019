<script>
    $(document).ready(function () {

        //Show the Invalid Credential message from ViewBag after login failed
        var message = '@ViewBag.Message' //Accessing  the Json Object from ViewBag from the ViewBag
        if (message != "") {
            $("#viewbagMessage").attr("hidden", false);
            setTimeout(function () {
                $('#viewbagMessage').fadeOut('fast');
            }, 10000); // <-- time in milliseconds
        }
           
    });


</script>

